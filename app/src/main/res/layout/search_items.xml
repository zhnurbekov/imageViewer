<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_history"/>

    <LinearLayout
        android:id="@+id/suggestion_text_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/search_key_line_8"
        android:paddingLeft="@dimen/search_key_line_8"
        android:paddingRight="@dimen/search_key_line_8"
        android:paddingStart="@dimen/search_key_line_8">

        <TextView
            android:id="@+id/suggestion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textIsSelectable="false"
            android:textSize="@dimen/search_text_14" />


    </LinearLayout>

    <ImageView
        android:id="@+id/remove_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_remove"
        android:padding="8dp"
        android:layout_marginEnd="3dp"/>

</LinearLayout>